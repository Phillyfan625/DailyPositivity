<Window x:Class="DailyPositivity.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DailyPositivity"
        mc:Ignorable="d"
        Title="ChatWindow" Height="450" Width="800">
    <Grid Background="#FFDEC3C3">
        <Label Content="Chat" HorizontalAlignment="Left" Margin="347,48,0,0" VerticalAlignment="Top" Width="86" FontSize="36"/>
        <Label Content="What is bothering you right now?" HorizontalAlignment="Left" Margin="219,156,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Button Content="Submit" HorizontalAlignment="Left" Margin="358,330,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <TextBox x:Name="userInput" HorizontalAlignment="Left" Height="57" Margin="320,217,0,0" TextWrapping="Wrap" Text="Type Here" VerticalAlignment="Top" Width="152" Background="#FFCFBBBB" TextAlignment="Center"/>

    </Grid>
</Window>
